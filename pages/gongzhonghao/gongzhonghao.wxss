/**index.wxss**/
#sort{
	background:#f5f5f5;
	padding-top:36rpx;
}
.search{margin:0rpx 24rpx 22rpx;}
.search image{
	width:32rpx;
	height:21rpx;
}
.sort_all{
	position:relative;
	bottom:12rpx;
}
.sort_all .sort_txt{
	font-size:18rpx;
	color:#979797;
	display:block;
}
.search input{
	width:600rpx;
	padding:0px 30rpx;
	height:56rpx;
	line-height:56rpx;
	background:#e5e5e5;
	border-radius:20rpx;
	color:#979797;
	font-size:24rpx;}
.made_product{
	position:relative;
}
.mask{
	position:absolute;
	top:0rpx;
	left:0rpx;
	height:100%;
	width:100%;
	background:rgba(0,0,0,0.5);
	overflow:hidden;
	transition:all 2s;
}
.product_item{
	font-size:32rpx;
}
.product_item image{
	width:28rpx;
	height:29rpx;
	margin-left:20rpx;
}
.made_sort{
	width:160rpx;
	position:absolute;
	left:-160rpx;
	top:0rpx;
	}
.sildeIn{
	transition:all 1s;
	transform:translateX(100%);
}
.slideOut{
	transition:all 1s;
	transform:translateX(-100%);
}
.product_sort{
	height:86rpx;
	line-height:86rpx;
	border-bottom:solid 1px #ececec;
	padding:0rpx 45rpx;
	color:#333;}
.made_sort{
	width:160rpx;
	text-align:center;
	background:#fff;
	height:100%;
}

.made_cont{
	width:100%;
	height:100%;
	overflow:hidden;
	background:#fff;}

.shopping_item{
	margin-top:46rpx;
	border-bottom:solid 1px #f5f5f5;
	padding-bottom:35rpx;
}
.shopping_img{width:152rpx;margin:0px 32rpx;}
.shopping_img image{
	width:146rpx;
	height:93rpx;
	margin-top:25rpx;
}
.edit_number{

	font-size:22rpx;
	color:#999;
	height:22rpx;
	line-height:22rpx;
	margin-top:130rpx;
}
.changeColor text{
	color:#21c3d4;
}
.edit_number image{
	width:24rpx;
	height:21rpx;
	margin-left:10rpx;
}
.number{
	width:72rpx;
	text-align:center;
	color:#878787;
	border-right:solid 1px #e5e5e5; 
	}
.shopping_name{
	width:275rpx;
}
.shopping_name text{
	display:block;
}
.shopping_name .text1{
